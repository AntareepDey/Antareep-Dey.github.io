---
import Layout from '../layouts/Layout.astro';
import { Navbar } from '../components/Navbar';
import { Footer } from '../components/Footer';
import { Project } from '../components/Project';
import { motion } from 'framer-motion';

const projects = [
  {
    title: "HUDN",
    year: "2023",
    description: "A platform to showcase your side projects. Built with Next.js and TypeScript, featuring real-time updates and a modern UI.",
    gradient: "bg-gradient-to-br from-purple-400/20 to-purple-600/20",
    githubUrl: "https://github.com/yourusername/hudn"
  },
  {
    title: "AntiGPT",
    year: "2023",
    description: "A sophisticated tool to detect AI-generated text using advanced NLP techniques and machine learning algorithms.",
    gradient: "bg-gradient-to-br from-orange-400/20 to-pink-600/20",
    githubUrl: "https://github.com/yourusername/antigpt"
  },
  {
    title: "TourX",
    year: "2023",
    description: "Your AI-based personal guide that provides contextual information about tourist destinations using computer vision.",
    gradient: "bg-gradient-to-br from-cyan-400/20 to-blue-600/20",
    githubUrl: "https://github.com/yourusername/tourx"
  },
  {
    title: "CodeMentor",
    year: "2023",
    description: "An AI-powered coding assistant that helps developers write better code through real-time suggestions and code analysis.",
    gradient: "bg-gradient-to-br from-green-400/20 to-emerald-600/20",
    githubUrl: "#"
  },
  {
    title: "DataViz Pro",
    year: "2023",
    description: "A data visualization tool that transforms complex datasets into intuitive, interactive visual representations.",
    gradient: "bg-gradient-to-br from-yellow-400/20 to-orange-600/20",
    githubUrl: "#"
  },
  {
    title: "ML Pipeline",
    year: "2023",
    description: "An end-to-end machine learning pipeline framework that streamlines the process of training and deploying ML models.",
    gradient: "bg-gradient-to-br from-red-400/20 to-rose-600/20",
    githubUrl: "#"
  }
];
---

<Layout title="Projects - Antareep Dey">
  <div class="min-h-screen">
    <Navbar client:load />
    
    <main class="px-6 pt-32">
      <div class="max-w-3xl mx-auto">
        <div class="mb-12">
          <h1 class="text-4xl font-bold gradient-heading mb-4">Projects</h1>
          <p class="text-gray-400">A collection of my work in machine learning, web development, and more.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 mb-20">
          {projects.map((project) => (
            <div data-scroll>
              <Project 
                client:visible
                title={project.title}
                year={project.year}
                description={project.description}
                gradient={project.gradient}
                githubUrl={project.githubUrl}
              />
            </div>
          ))}
        </div>

        <Footer client:load />
      </div>
    </main>
  </div>
</Layout>