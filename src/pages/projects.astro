---
import Layout from '../layouts/Layout.astro';
import { Navbar } from '../components/Navbar';
import { Footer } from '../components/Footer';
import { Project } from '../components/Project';

const projects = [
  {
    title: "See-curity",
    year: "2024",
    description: "A system that records surveillance footage based on the presence of human activity.",
    image: "/antareepdey.github.io/src/assets/Surveillence.avif",
    githubUrl: "https://github.com/AntareepDey/Survellience-Footage-Optimization"
  },
  {
    title: "Signal Compression",
    year: "2024",
    description: "Paper Implementation: Hybrid Compression Method for PQD Signals in Active Distribution Networks",
    image: "/antareepdey.github.io/src/assets/Singnal.avif",
    githubUrl: "https://github.com/AntareepDey/PQD-SignalCompression"
  },
  {
    title: "Panels Wallpapers",
    year: "2024",
    description: "A small script to download all the wallpapers from the new PANELS app",
    image: "/antareepdey.github.io/src/assets/wallpaper.avif",
    githubUrl: "https://github.com/AntareepDey/Get-Panels-wallpapers"
  },
  {
    title: "SeeFood",
    year: "2024",
    description: "The Shazam for Food (Well kinda!). Check if your food is a hotdog or not.",
    image: "/antareepdey.github.io/src/assets/Seefood.avif",
    githubUrl: "https://github.com/AntareepDey/SeeFood"
  },
  {
    title: "SymptoCareAI",
    year: "2023",
    description: "A project that harnesses the power of LLM's to provide safe medical advice.",
    image: "/antareepdey.github.io/src/assets/Symptocare.avif",
    githubUrl: "https://github.com/AntareepDey/SymptoCareAI"
  },
  {
    title: "Prolog Calc",
    year: "2023",
    description: "A calculator application written in Prolog.",
    image: "/antareepdey.github.io/src/assets/prolog.avif",
    githubUrl: "https://github.com/AntareepDey/Prolog_calc"
  },
  {
    title: "Marketing Management System",
    year: "2022",
    description: "A flask based web app that helps in marketing and sales management",
    image: "/antareepdey.github.io/src/assets/MarketingMgt.avif",
    githubUrl: "https://github.com/AntareepDey/Marketing-management-sytem"
  },
  {
    title: "PyPad",
    year: "2021",
    description: "A notepad clone written in Python using tkinter (cuz why not!)",
    image: "/antareepdey.github.io/src/assets/Pypad.avif",
    githubUrl: "https://github.com/AntareepDey/PyPad"
  },
  {
    title: "Hangman",
    year: "2020",
    description: "A fun hangman game written in Python using Tkinter.",
    image: "/antareepdey.github.io/src/assets/Hangman.avif",
    githubUrl: "https://github.com/AntareepDey/hangmanproject"
  }
];
---

<Layout title="Projects - Antareep Dey">
  <div class="min-h-screen">
    <Navbar client:load />
    <main class="px-6 pt-32">
      <div class="max-w-6xl mx-auto">
        <div class="mb-12">
          <h1 class="text-4xl font-bold gradient-heading mb-4">Projects</h1>
          <p class="text-gray-400">A collection of my work in machine learning, web development, and more.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-20">
          {projects.map((project) => (
            <div data-scroll>
              <Project 
                client:visible
                {...project}
              />
            </div>
          ))}
        </div>

        <Footer client:load />
      </div>
    </main>
  </div>
</Layout>