---
import Layout from '../layouts/Layout.astro';

const errorMessages = [
  {main:"I'm not sure what you're looking for, but it's definitely not here",
   sub: "Maybe try a different dimension?"
  },
  {main:"The page you're looking for has been abducted by aliens",
   sub: "I'm working on getting it back (probably not)"
  },
  {main:"This page has gone on a permanent vacation",
   sub: "I'm not sure where, but I'm jealous"
  },
  {main:"This page is on a coffee break",
   sub: "It'll be back soon, I promise"
  },
  {main:"This Page Was Too Cool to Exist",
   sub: "It transcended the internet and is now a concept in the Metaverse"
  },
  {main:"You've taken a wrong turn. Let's get you back on track",
   sub: "I'm not sure where you were headed, but it wasn't here"
  },
  {main:"Page Ate Too Many Cookies,Now it\â€™s taking a nap",
   sub: "Try waking it up with a different URL!"
  }
];

const errorMessage = errorMessages[Math.floor(Math.random() * errorMessages.length)];
---


<Layout title="404 - Page Not Found">
  <div class="min-h-screen flex flex-col items-center justify-center px-6 relative">
    {/* Main Content */}
    <div class="text-center relative z-10">
      <h1 class="text-[6rem] md:text-[8rem] lg:text-[10rem] font-bold gradient-heading leading-none select-none mb-6">
        404
      </h1>
      <div class="space-y-2 md:space-y-4 mb-8 md:mb-12">
        <p class="text-lg md:text-2lg lg:text-3lg text-white/80">
          {errorMessage.main}
        </p>
        <p class="text-sm text-gray-400">
          {errorMessage.sub}
        </p>
      </div>
      <a 
        href="/" 
        class="inline-flex items-center space-x-3 bg-white/5 backdrop-blur-lg border 
               border-white/10 shadow-xl px-6 py-3 rounded-full text-white/80 
               hover:text-white transition-all duration-300 hover:scale-105 
               hover:bg-white/10 group"
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-5 w-5 transition-transform duration-300 group-hover:-translate-x-1" 
          viewBox="0 0 20 20" 
          fill="currentColor"
        >
          <path 
            fill-rule="evenodd" 
            d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" 
            clip-rule="evenodd"
          />
        </svg>
        <span class="font-medium">Back to Home</span>
      </a>
    </div>

    {/* Decorative Elements */}
    <div class="absolute inset-0 -z-10 overflow-hidden pointer-events-none">
      {/* Animated circles with different sizes for different screens */}
      <div class="absolute top-1/4 left-1/4 w-24 h-24 md:w-32 md:h-32 lg:w-40 lg:h-40 
                  bg-purple-500/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-32 h-32 md:w-40 md:h-40 lg:w-48 lg:h-48 
                  bg-blue-500/20 rounded-full blur-3xl animate-float delay-1000"></div>
      <div class="absolute top-1/2 right-1/3 w-20 h-20 md:w-28 md:h-28 lg:w-36 lg:h-36 
                  bg-pink-500/20 rounded-full blur-3xl animate-float delay-2000"></div>
    </div>
  </div>
</Layout>

<style>
  /* Custom animation for floating effect */
  @keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
  }

  .animate-float {
    animation: float 8s ease-in-out infinite;
  }

  /* Delay variants */
  .delay-1000 {
    animation-delay: 1s;
  }

  .delay-2000 {
    animation-delay: 2s;
  }
</style>